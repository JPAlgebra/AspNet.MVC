@{
    ViewData["Title"] = "Exam";
}

@model List<Book>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr class="align-middle text-center">
                <th rowspan="2">@Html.DisplayNameFor(model => model.First().Title)</th>
                <th rowspan="2">@Html.DisplayNameFor(model => model.First().YearPublished)</th>
                <th rowspan="2">@Html.DisplayNameFor(model => model.First().Language)</th>
                <th colspan="3">@Html.DisplayNameFor(model => model.First().Author)</th>
            </tr>
            <tr class="align-middle text-center">
                <th>@Html.DisplayNameFor(model => model.First().Author.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.First().Author.Nationality)</th>
                <th>@Html.DisplayNameFor(model => model.First().Author.PenName)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.YearPublished</td>
                    <td>@book.Language</td>
                    <td>@book.Author.FullName</td>
                    <td>@book.Author.Nationality</td>
                    <td>@book.Author.PenName</td>
                </tr>
            }
        </tbody>
    </table>
</div>